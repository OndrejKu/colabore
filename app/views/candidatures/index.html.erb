<p id="notice"><%= notice %></p>

<h1>Candidatures</h1>

<table>
  <thead>
    <tr>
      <th>Introduction letter</th>
      <th>Accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidatures.each do |candidature| %>
      <tr>
        <td><%= candidature.introduction_letter %></td>
        <td><%= candidature.accepted %></td>
        <td><%= link_to 'Show', candidature %></td>
        <td><%= link_to 'Edit', edit_candidature_path(candidature) %></td>
        <td><%= link_to 'Destroy', candidature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

